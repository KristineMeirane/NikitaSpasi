<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.eventify.MainActivity"
        android:label="Main Activity">
        <action
            android:id="@+id/action_main_to_blank"
            app:destination="@id/blankScreenActivity"/>
    </activity>

    <activity
        android:id="@+id/blankScreenActivity"
        android:name="com.example.eventify.BlankScreenActivity"
        android:label="Blank Screen Activity"/>

</navigation>